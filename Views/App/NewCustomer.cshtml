@model CRM.Models.CRMCustomer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Customer</title>
    <style>
        #submit-btn{
            border:none;
            padding:10px 20px;
            background-color:#2F1C6A;
            color:white;
            font-weight:bold;
            box-shadow:0px 0px 6px 2px rgba(0,0,0,0.5) inset;
            border-radius:10px;
        }
        #input{
            height:30px;
            width:200px;
        }
        #form{
            display:flex;
            justify-content:center;
            align-items:center;
            box-shadow:0px 0px 6px 2px rgba(0,0,0,0.5);
            height:350px;
            width:500px;
        }
       label{
           margin-left:20px;
           

       }
       body{
           display:flex;
           justify-content:center;
           align-items:center;
           flex-direction:column;
       }
    </style>
</head>
<body>
    <h2 style="text-align:center;color:royalblue;text-decoration:underline">New Customer</h2>
    <div id="form"> 
        @using (Html.BeginForm("NewCustomer", "App"))
        {

            <label>Name:</label>
           @Html.TextBoxFor(c=>c.Name) <br/><br/>

            <label>E-mail:</label>
            @Html.TextBoxFor(c=>c.email)<br/><br/>
            <label>Phone:</label>
            @Html.TextBoxFor(c=>c.mobile)<br/><br/>
            <label>City:</label>
           @Html.TextBoxFor(c=>c.city)<br/><br/>
           <input type="text" value=@Session["Id"] name ="txtUserid" style="display:none">
            <input type="submit" value="Add Customer" style="margin-left:80px" id="submit-btn">
        }


    </div>
        
</body>
</html>
